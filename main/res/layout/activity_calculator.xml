<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#000000"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">



        <!-- Whale-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bluewhale">
            <TextView
                android:id="@+id/one_title"
                android:textSize="36sp"
                android:background="#99000000"
                android:text="A whale at your age"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#99000000">
                <TextView
                    android:id="@+id/one_sub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:text="human" />
                <ImageView
                    android:id="@+id/hb1"
                    android:layout_below="@id/one_sub1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hb"/>
                <TextView
                    android:id="@+id/one_sub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:layout_below="@id/hb1"
                    android:text="whale"/>
                <ImageView
                    android:id="@+id/hb2"
                    android:layout_below="@id/one_sub2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hb"/>
            </RelativeLayout>
        </RelativeLayout>











